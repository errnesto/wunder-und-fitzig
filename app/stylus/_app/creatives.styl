.creatives-page
	height 100%

.right-person,
.left-person,
.center-person
	position    absolute
	height      100% 
	width:      52% 

	background-repeat no-repeat;
	margin-top        -(header-height + 10)

.right-person
	background-position left header-height
	right               0

.left-person
	background-position right header-height
	left                0

.center-person
	width               100%
	height              64% 
	left                0
	background-position center top
	margin-top          0
	padding-top         0

.text, 
.right-text, 
.center-text
	width    420px
	position relative
	z-index  2
	height   100%

	.paragraphs
		display  block
		height   70%
		overflow auto

.right-text
	margin-left 55%

.center-text
	width: 100%
	height: 36%