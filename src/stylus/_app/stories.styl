.stories-container
	height 100%

.storie
	position relative
	float left
	width 100%
	height 100%
	overflow auto

	.storie-title
		position absolute

	.arrow
		position absolute
		top 300px
		&.next 
			right 0

	.storie-item
		position absolute
		top 0
		width 100%
		height 100%
		transition 1.2s
		&.prev
			left -100%
		&.active
			left 0%
		&.next
			left 100%
		&.wraparound
			left -100%


		