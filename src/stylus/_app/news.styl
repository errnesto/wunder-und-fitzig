//start page
.neugierig {
	text-align: center
	font-size: 4.5em
	font-weight: 300
	margin-top: 70px
	strong{
		font-weight: normal
		font-weight: 600
	}
}
.contact
	height: 2.5em 
	margin: 30px auto 60px
	padding: 20px 0
	border-top: 1px dotted
	div
		margin: 0 auto
		width: 36em
		p
			float: left
			width: 12em; margin: 0 auto
			vertical-align: top

.news-feed
	width: inner-width
	margin: 0 auto
	min-height: 500px
	.fb-post
		a
			display: block
			&:hover
				border-bottom: 0

	.fb-date
		font-size: 1.2em
		font-weight: 300
		margin: 60px 0 10px

	.photo
		.fb-picture
			width: inner-width
			height: auto
	.link
		a
			background-color: transparent-grey
			font-size: 0

	.fb-message
		margin-top: 10px

.more-news-link
	border-top: 1px dotted
	padding-top: 20px
	margin-top: 80px

.impressum
	background-color: #eee
	background-color: transparent-grey
	position: absolute
	left: 0
	margin-top: 50px
	width: 100%
	padding: 10px 0
	font-size: 0.7em
	color: #777
	text-align: center